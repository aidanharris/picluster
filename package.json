{
    "name": "picluster",
    "config": {
      "unsafe-perm": true
    },
    "scripts": {
        "test": "xo",
        "install": "cd server && npm install && cd ../agent && npm install && cd ../web && npm install && cd .. && ([ -d 'docs' ] || git clone https://github.com/picluster/picluster.wiki.git docs)"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/picluster/picluster.git"
    },
    "keywords": [],
    "author": "",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/picluster/picluster/issues"
    },
    "homepage": "https://github.com/picluster/picluster",
    "xo": {
        "space": 2,
        "envs": [
            "node",
            "es6"
        ],
        "ignores": [
            "web/assets/**"
        ],
        "rules": {
            "camelcase": "off",
            "no-prototype-builtins": "off",
            "radix": "off",
            "max-nested-callbacks": "warn",
            "no-path-concat": "warn"
        }
    },
    "devDependencies": {
        "xo": "^0.18.2"
    }
}
